 */
class SelectedActionData {
  id: string = '';
  name: string = '';
  muscleGroup: string = '';
  thumbnailUrl: string = '';

  constructor(id: string, name: string, muscleGroup: string, thumbnailUrl: string) {
    this.id = id;
    this.name = name;
    this.muscleGroup = muscleGroup;
    this.thumbnailUrl = thumbnailUrl;
  }
}

